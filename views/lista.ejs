

<%- include('../views/partials/header'); %>


<div class="center">
    <div class="postFeed">

        <div class="center">
            <h1 class="tittle-feed">Blog em Nodejs, Express, MySQL </h1>
    



    
        <form action="/add">
            <button type="submit" class="btn btn-dark">Criar um post</button>
        </form>

        </div>
        
        

        <% for(item of listaDados){ %>

            <div class="center">
                <div class="card colorbg mb-3 mt-3" style="max-width: 750px; width: 100%; height: 100%; margin-top: 0px; padding:5px ;" >
                    <div class="row g-0">
                   
                    <div class="col-md-8">
                        <h1></h1>
                        <div class="card-body">
                            
                        <div class="img-name">
                          <img style=" width: 9%; height: 30px; border-radius: 100%; "  src="https://cdn-icons-png.flaticon.com/512/149/149071.png"  alt=""> 
                           <h2 class="colorName"><%= item.nomeUser %></h2>
                           <div class="options">
                                
                                <a href="/excluir/<%=item.id%>"><i class="bi bi-trash"></i></a>
                                <a href="/edit/<%=item.id %>"><i class="bi bi-pencil-fill"></i></a>
                           </div>
                           
                        </div>
                        <h5 class="card-title"><strong><%= item.titulo %> </strong> </h5>
                        
                        
                        </div>
                    </div>
                    <p class="card-text lead"><%= item.textUser %>  </p>
                    </div>

                    <div class="centerimg">
                        <img class="imgpost" src="<%= item.imagem %>" alt="">
                    </div>

                </div>
         
                
        
            </div>
        
        <% } %>

    </div>
  
</div>


  
    
